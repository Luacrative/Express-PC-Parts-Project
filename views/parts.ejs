<!DOCTYPE html>
<html>

<head>
    <title>PC Parts | Parts</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
</head>

<body>
    <%- include("header") -%>

    <h1>Parts</h1>

    <ul>
        <% parts.forEach( part=>{ %>
            <li>
                <h2><%=part.name%></h2>
                <p><%=part.description%></p>
                <p><strong>$<%=part.price%></strong> (<%=part.stock%> left)</p>
                <a href="<%=part.editUrl%>">Edit</a>
                <a href="<%=part.deleteUrl%>">Delete</a>
            </li>
        <% }); %>
    </ul>

    <a href="/parts/create">Add new part</a>
</body>

</html>