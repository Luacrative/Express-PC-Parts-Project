<!DOCTYPE html>
<html>

<head>
    <title>PC Parts | Components</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
</head>

<body>
    <h1>Components</h1>

    <ul>
        <% components.forEach( component=>{ %>
            <li>
                <h2><%=component.name%></h2>
                <p><%=component.description%></p>
                <a href="<%=component.editUrl%>">Edit</a>
                <a href="<%=component.deleteUrl%>">Delete</a>
            </li>
        <% }); %>
    </ul>

    <a href="/components/create">Add new component</a>
</body>

</html>